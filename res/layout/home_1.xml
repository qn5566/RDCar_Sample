<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/remote_control"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>

                

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/doc_send"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone" >

                    <ImageButton
                        android:id="@+id/web_site"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>
                
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/app_setup"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>
                
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/plus_app"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
