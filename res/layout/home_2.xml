<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:scrollbars="none"
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/scifly_infooo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test"
            android:textColor="@color/red"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/net_video"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_net_video_height"
                        android:background="@drawable/test01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/live_liantong"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/local_photo"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/local_song"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <ImageButton
                        android:id="@+id/local_video"
                        android:layout_width="@dimen/home_icon_width"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/test01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/vip_back"
                android:layout_width="@dimen/home_icon_width"
                android:layout_height="@dimen/home_icon_height"
                android:layout_gravity="center"
                android:src="@drawable/test01" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>